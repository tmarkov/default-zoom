{
  "manifest_version": 2,
  "name": "Default Zoom",
  "short_name": "Default Zoom",
  "version": "1.0",
  "description": "Set default zoom level for Firefox.",
  "author": "Todor Markow",
  "homepage_url": "https://github.com/tmarkov/default-zoom",

  "permissions": [
    "storage", "tabs"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "options_ui": {
    "page": "preferences.html"
  },

  "applications": {
    "gecko": {
      "id": "default-zoom@tmarkov.com",
      "strict_min_version": "52.0"
    }
  }
}
